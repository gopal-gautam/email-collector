APP_NAME="Newsletter Collector"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://localhost:8000

# Database Configuration (DB-agnostic)
DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=newsletter_collector
DB_USERNAME=root
DB_PASSWORD=

# Queue Configuration
QUEUE_CONNECTION=database

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Cache Configuration
BROADCAST_CONNECTION=log
CACHE_STORE=database
FILESYSTEM_DISK=local
SESSION_DRIVER=database
SESSION_LIFETIME=120

# Logging
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Newsletter Collector Specific Settings
NEWSLETTER_DOUBLE_OPT_IN_DEFAULT=false
NEWSLETTER_CONFIRMATION_EXPIRY_HOURS=48
NEWSLETTER_RATE_LIMIT_SUBSCRIPTIONS=30
NEWSLETTER_RATE_LIMIT_GENERAL=60
NEWSLETTER_RATE_LIMIT_UNSUBSCRIBE=10
NEWSLETTER_DISPOSABLE_DOMAINS_PATH=null
NEWSLETTER_ADMIN_EMAIL=admin@example.com
NEWSLETTER_REPLY_TO_EMAIL=noreply@example.com
NEWSLETTER_MAX_PROJECTS_PER_USER=10

# Vite Configuration
VITE_APP_NAME="${APP_NAME}"